@model RzrSite.Models.Responses.Category.StrippedCategory
@{ 
  ViewData["Title"] = $"Редактирование категории {Model.Name}";
}

<div class="row">
  <div class="col-md-8">
    <h2>@ViewData["Title"]</h2>
    <section>
      <form action="/Category/Edit/@Model.Id" method="post" class="border-info form-horizontal" role="form">
        <div class="form-group form-row">
          <label class="col-md-2 control-label">Id</label>
          <div class="col-md-10">
            <input type="text" readonly="readonly" name="@nameof(Model.Id)" class="form-control" value="@Model.Id" />
          </div>
        </div>
        <div class="form-group form-row">
          <label class="col-md-2 control-label">Название</label>
          <div class="col-md-10">
            <input type="text" name="@nameof(Model.Name)" class="form-control" value="@Model.Name" />
          </div>
        </div>
        <div class="form-group form-row">
          <label class="col-md-2 control-label">Вес</label>
          <div class="col-md-10">
            <input type="text" name="@nameof(Model.Weight)" class="form-control" value="@Model.Weight" />
          </div>
        </div>
        <div class="form-group form-row">
          <label class="col-md-2 control-label">Ссылка</label>
          <div class="col-md-10">
            <div class="row">
              <div class="col-md-2">
                <span class="text-info text-host">{ui-host}</span>
              </div>
              <div class="col-md-10">
                <input type="text" name="@nameof(Model.Path)" class="form-control" value="@Model.Path" />
              </div>
            </div>
          </div>
        </div>
        <div class="form-group form-row">
          <label class="col-md-2 control-label">Линейки</label>
          <div class="col-md-10">
            @await Component.InvokeAsync("ProductLines", new { categoryId = Model.Id })
            <div class="row">
              <div class="offset-8 col-md-4">
                <a class="btn btn-block btn-success" asp-action="Add" asp-controller="ProductLine" asp-route-categoryId="@Model.Id">
                  Добавить
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group form-row">
          <div class="col-md-10 offset-2">
            <button type="submit" class="btn btn-outline-info btn-block form-control">Сохранить</button>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>