@model RzrSite.Models.Responses.Category.StrippedCategory
@{
  ViewData["Title"] = $"Добалвение категории";
}
<div class="row">
  <div class="col-md-6">
    <h2>@ViewData["Title"]</h2>
    <section>
      <form action="/Category/Add" method="post" class="border-info form-horizontal" role="form">
        <div class="form-group form-row">
          <label class="col-md-2 control-label">Название</label>
          <div class="col-md-10">
            <input type="text" name="@nameof(Model.Name)" class="form-control" value="@Model.Name" />
          </div>
        </div>
        <div class="form-group form-row">
          <label class="col-md-2 control-label">Вес</label>
          <div class="col-md-10">
            <input type="text" class="form-control" value="@Model.Weight" />
          </div>
        </div>
        <div class="form-group form-row">
          <label class="col-md-2 control-label">Ссылка</label>
          <div class="col-md-10">
            <div class="row">
              <div class="col-md-3">
                <span class="text-info">{ui-host}</span>
              </div>
              <div class="col-md-9">
                <input type="text" name="@nameof(Model.Path)" class="form-control" value="@Model.Path" />
              </div>
            </div>
          </div>
        </div>
        <div class="form-group form-row">
          <div class="col-md-10 offset-2">
            <button type="submit" class="btn btn-outline-info btn-block form-control">Создать</button>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>